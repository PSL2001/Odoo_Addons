<odoo>
<!-- Report de company -->
<report id="report_company" model="empresas.company" string="Reporte de compañia" 
report_type="qweb-pdf" name="report_company" file="report_company.report_company" attachment_use="False" attachment="report_company.report_company"/>

<!-- Template para el report de company -->
<template id="report_company">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <h1>Reporte de compañia</h1>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Telefono</th>
                                <th>Email</th>
                                <th>Website</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc="o.name"/></td>
                                <td><t t-esc="o.phone"/></td>
                                <td><t t-esc="o.email"/></td>
                                <td><t t-esc="o.website"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </t>
</template>

</odoo>