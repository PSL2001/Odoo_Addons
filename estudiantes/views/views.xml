        }
      </field>
    </record>
-->

    <!-- Top menu item -->
    <menuitem name="Estudiantes" id="estudiantes.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu Estudiantes" id="estudiantes.menu_estudiantes" parent="estudiantes.menu_root"/>
    <menuitem name="Menu Profesores" id="estudiantes.menu_profesores" parent="estudiantes.menu_root"/>
    <!-- actions -->

    <menuitem name="Listado Alumnos" id="estudiantes.menu_1_list" parent="estudiantes.menu_1"
              action="estudiantes.action_window"/>
    <menuitem name="Listado Profesores" id="estudiantes.menu_profesores_list" parent="estudiantes.menu_profesores"
              action="profesores.action_server"/>
  </data>
</odoo>