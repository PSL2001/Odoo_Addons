<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="estudiantes.list">
      <field name="name">Datos del Estudiante</field>
      <field name="model">estudiantes.estudiantes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="apellidos"/>
          <field name="edad"/>
          <field name="activo"/>
          <field name="fecha_Inicio"/>
          <field name="cursos_id"/>
          <field name="profesores_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="estudiantes.form">
      <field name="name">Datos del Estudiante</field>
      <field name="model">estudiantes.estudiantes</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="nombre" string="Nombre del alumno" style="color:red;"/>
            <field name="apellidos" string="Apellidos del Alumno"/>
            <field name="edad" string="Edad del alumno"/>
            <field name="activo" string="Â¿Sigue el alumno en el centro?"/>
            <field name="fecha_Inicio" string="Fecha de comienzo del alumno"/>
            <field name="cursos_id" string="Cursos del Alumno" style="width:30%;"/>
            <field name="profesores_id" string="Profesores del Alumno" style="width:30%;"/>
          </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="estudiantes.action_window">
      <field name="name">Listado de Estudiantes</field>
      <field name="res_model">estudiantes.estudiantes</field>
      <field name="view_mode">tree,form</field>
    </record>



