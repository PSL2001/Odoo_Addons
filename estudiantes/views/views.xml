<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="estudiantes.list">
      <field name="name">Datos del Estudiante</field>
      <field name="model">estudiantes.estudiantes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="apellidos"/>
          <field name="edad"/>
          <field name="activo"/>
          <field name="fecha_Inicio"/>
          <field name="cursos_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="profesores.list">
      <field name="name">Datos del Profesorado</field>
      <field name="model">profesores.estudiantes</field>
      <field name="arch" type="xml">
        <tree>
          <group>
            <field name="nombre"/>
            <field name="apellidos"/>
            <field name="activo"/>
            <field name="asignatura"/>
            <field name="descripcion"/>
            <field name="fecha_Inscripcion"/>
          </group>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="estudiantes.action_window">
      <field name="name">Listado de Estudiantes</field>
      <field name="res_model">estudiantes.estudiantes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="profesores.action_window">
      <field name="name">Listado de profesores</field>
      <field name="res_model">profesores.estudiantes</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
